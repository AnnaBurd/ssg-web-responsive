---
const { land } = Astro.props;
---

<div class="land-props">
  {
    land.address && (
      <div class="land-prop land-prop--address">
        <span class="land-prop__icon">
          <svg>
            <use xlink:href="/icons.svg#icon-location-2" />
          </svg>
        </span>
        <span class="land-prop__text">Địa chỉ: {land.address}</span>
      </div>
    )
  }
  {
    land.area && (
      <div class="land-prop">
        <span class="land-prop__icon">
          <svg>
            <use xlink:href="/icons.svg#icon-area" />
          </svg>
        </span>
        <span class="land-prop__text">Điện tích: {land.area}&nbsp;m&sup2</span>
      </div>
    )
  }
  {
    land.faceSideLength && (
      <div class="land-prop">
        <span class="land-prop__icon">
          <svg>
            <use xlink:href="/icons.svg#icon-faceside" />
          </svg>
        </span>
        <span class="land-prop__text">
          Mặt tiền: {land.faceSideLength}&nbsp;m
        </span>
      </div>
    )
  }
  {
    land.papers && (
      <div class="land-prop">
        <span class="land-prop__icon">
          <svg>
            <use xlink:href="/icons.svg#icon-papers-3" />
          </svg>
        </span>
        <span class="land-prop__text">Giấy tờ pháp lý: {land.papers}</span>
      </div>
    )
  }
  {
    land.price && (
      <div class="land-prop">
        <span class="land-prop__icon">
          <svg>
            <use xlink:href="/icons.svg#icon-price" />
          </svg>
        </span>
        <span class="land-prop__text">
          Giá:
          {land.price}&nbsp;tỷ ({((land.price * 1000) / land.area).toFixed(1)}
          &nbsp;triều/m&sup2)
        </span>
      </div>
    )
  }
  {
    land.link && (
      <div class="land-prop land-prop--link">
        <a class="link-btn" href={land.link}>
          <span class="land-prop__text">Xem Sở Quy Hoạch</span>
          <span class="link-btn__arrow-background">
            <svg class="link-btn__arrow-icon">
              <use href="/icons.svg#arrow-link" />
            </svg>
          </span>
        </a>
      </div>
    )
  }
</div>

<style lang="sass">
  .land-props
    // background: pink
  .land-prop:not(.land-prop--link)
    display: flex
    align-items: center
    margin-bottom: 1.4rem
  .land-prop--link
    margin-top: 1rem
    margin-left: -0.5rem
    text-decoration: underline
  .land-prop--address
    max-width: 25rem // Prevent overstretching of address line
  .land-prop
    color: inherit
    &__icon
      width: 1.2em
      height: 1.2em
      flex: 0 0 1.2em
      fill: var(--color-intermediate-3)
      svg
        width: 100%
        height: 100%
    &__text
      font-family: var(--font-family-display)
      font-size: 1.2rem
      font-weight: 500
      line-height: 1.2rem
      margin-left: .5rem
</style>
